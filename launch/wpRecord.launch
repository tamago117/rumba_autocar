<?xml version="1.0"?>
<launch>
    <arg name="map_frame_id" default="map"/>
    <arg name="base_link_id" default="base_link"/>
    <arg name="loop_rate" default="50"/>
    <arg name="filePath" value="$(find rumba_autocar)/csv/way1"/>

    <include file="$(find rumba_autocar)/launch/basicNavigation.launch">
        <arg name="nav_mode" default="mapping"/>
        <arg name="move_base" default="false"/>
        <arg name="use_imu" default="false"/>
        <arg name="lidar" default="hokuyo"/>
    </include>

    <node name="wpRecord" pkg="rumba_autocar" type="wpRecord" output="screen">
        <param name="map_frame_id" value="$(arg map_frame_id)"/>
        <param name="base_link_id" value="$(arg base_link_id)"/>
        <param name="loop_rate" value="$(arg loop_rate)"/>
    </node>

    <node name="csv_output" pkg="rumba_autocar" type="csv_output">
        <param name="filePath" value="$(arg filePath)"/>
    </node>

</launch>