<?xml version="1.0"?>

<launch>
    <arg name="way_file" default="turtlebot_world_wayA.csv"/>
    <!--<arg name="way_file" default="house_way.csv"/>-->
    <arg name="simulation" default="true"/>

    <include file="$(find rumba_autocar)/launch/include/basicNavigation.launch">
        <arg name="nav_mode" default="slam"/>
        <arg name="move_base" default="false"/>
        <arg name="gazebo" value="$(arg simulation)"/>
        <!--<arg name="world" value="turtlebot3_house.world"/>-->
        <arg name="mapFile" value="$(find rumba_autocar)/resources/turtlebot3_world/map.yaml"/>
        <!--<arg name="mapFile" value="$(find rumba_autocar)/resources/turtle_house/map.yaml"/>-->
    </include>

    <node name="wpLoad" pkg="rumba_autocar" type="wpLoad">
        <param name="filePath" value="$(find rumba_autocar)/csv/$(arg way_file)"/>
        <param name="map_frame_id" value="map"/>
    </node>
    <node name="wpVisualizer" pkg="rumba_autocar" type="wpVisualizer">
        <remap from="path" to="wayPoint/path"/>
        <param name="markerSize" value="3.0"/>
    </node>
    <node name="wpSelect" pkg="rumba_autocar" type="wpSelect">
        <param name="base_link_frame_id" value="base_footprint"/>
        <param name="map_frame_id" value="map"/>
        <param name="maxVelocity" value="0.7"/>
        <param name="loop_rate" value="100"/>
        <param name="target_deviation" value="0.6"/>
        <param name="final_target_deviation" value="0.1"/>
        <remap from="path" to="wayPoint/path"/>
        <remap from="successPlan" to="astar_planning_node/successPlan"/>
    </node>

    <node pkg="rumba_autocar" type="costmap_node" name="costmap_node">
        <rosparam command="load" file="$(find rumba_autocar)/config/local_costmap_params.yaml" />
    </node>

    <node name="astar_planning_node" pkg="rumba_autocar" type="astar_planning_node" output="screen">
        <rosparam command="load" file="$(find rumba_autocar)/config/astar_planning.yaml" />
        <remap from="astar_plannnig_node/goal" to="targetWpPose"/>
        <remap from="astar_plannnig_node/costmap" to="costmap_node/my_costmap/costmap"/>
    </node>

    <node name="lane_planner" pkg="rumba_autocar" type="lane_planner">
        <rosparam file="$(find rumba_autocar)/config/lane_planner.yaml" command="load" />
        <remap from="lane_planner/costmap" to="costmap_node/my_costmap/costmap"/>
        <remap from="path" to="astar_plannnig_node/path"/>
        <remap from="robot_now_vel" to="cmd_vel"/>
    </node>

    <node name="pure_posePursuit" pkg="rumba_autocar" type="pure_posePursuit">
        <param name="base_link_frame_id" value="base_footprint"/>
        <param name="map_frame_id" value="map"/>
        <param name="loop_rate" value="30"/>
        <param name="maxVelocity" value="0.7"/>
        <param name="max_angular_vel" value="1.5"/>
        <param name="maxCurvature" value="5"/>
        <remap from="pure_posePursuit/pose_in" to="lane_planner/pose_out"/>
    </node>


    <node name="wpBack_recovery" pkg="rumba_autocar" type="wpBack_recovery">
        <param name="base_link_frame_id" value="base_footprint"/>
        <param name="map_frame_id" value="map"/>
        <param name="loop_rate" value="20"/>
        <param name="linear_vel" value="-0.4"/>
        <param name="max_angular_vel" value="0.5"/>
        <param name="duration" value="3.0"/>
        <param name="recovery_leastDistance" value="1.0"/>
        <param name="fin_recovery_deviation" value="0.2"/>
        <remap from="path" to="wayPoint/path"/>
    </node>

    <!--<node pkg="rumba_autocar" name="simple_recovery" type="simple_recovery">
        <param name="linear_vel" value="-0.3"/>
        <param name="angular_vel" value="0"/>
        <param name="duration" value="1.5"/>
    </node>-->

    <node name="twist_maneger" pkg="rumba_autocar" type="twist_maneger">
        <param name="base_link_frame_id" value="base_footprint"/>
        <param name="map_frame_id" value="map"/>
        <param name="loop_rate" value="50"/>
        <remap from="twist_maneger/targetWpPose_in" to="targetWpPose"/>
        <remap from="twist_maneger/targetPose_in" to="lane_planner/pose_out"/>
        <remap from="cmd_vel" to="pure_posePursuit/cmd_vel"/>
        <remap from="waypoint/now" to="targetWp"/>
    </node>
    <!--safety function-->
    <node pkg="rumba_autocar" name="laser2pc" type="laser2pc">
        <remap from="scan" to="scan_filtered"/>
    </node>
    <node pkg="rumba_autocar" name="safety_limit" type="safety_limit" output="screen">
        <rosparam file="$(find rumba_autocar)/config/safety_limit.yaml" command="load" />
        <remap from="safety_limit/cmd_vel_in" to="twist_maneger/cmd_vel"/>
        <remap from="safety_limit/cmd_vel_out" to="cmd_vel"/>
        <remap from="cloud" to="laser2pc/pc2"/>
        <remap from="safety_limit/costmap" to="costmap_node/my_costmap/costmap"/>
     </node>


    <!--<node name="pureWpTrace" pkg="rumba_autocar" type="pureWpTrace">
        <param name="base_link_frame_id" value="base_footprint"/>
        <param name="map_frame_id" value="map"/>
        <param name="loop_rate" value="30"/>
        <param name="max_angular_vel" value="1.5"/>
        <param name="minSpeed" value="0.35"/>
        <param name="maxSpeed" value="0.7"/>
        <param name="maxCurvature" value="2"/>
        <remap from="path" to="wayPoint/path"/>
        <remap from="roomba/cmd_vel" to="pureWpTrace/cmd_vel"/>
    </node>
    <node pkg="rumba_autocar" type="costmap_node" name="costmap_node">
        <rosparam command="load" file="$(find rumba_autocar)/config/local_costmap_params.yaml" />
        <remap from="costmap_node/my_costmap/costmap" to="state_lattice_planner/costmap"/>
    </node>
    <node name="twist_maneger" pkg="rumba_autocar" type="twist_maneger">
        <param name="base_link_frame_id" value="base_footprint"/>
        <param name="map_frame_id" value="map"/>
        <param name="loop_rate" value="30"/>
        <param name="maxYaw_rate" value="2"/>
        <remap from="path" to="wayPoint/path"/>
        <remap from="cmd_vel" to="pureWpTrace/cmd_vel"/>
        <remap from="twist_maneger/cmd_vel" to="cmd_vel"/>
    </node>-->

    <!--rviz-->
    <arg name="rvizconfig" default="$(find rumba_autocar)/rviz/wpTrack.rviz" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

</launch>